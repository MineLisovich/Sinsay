<Window x:Class="Sinsay.Views.User.WindowsShoppingCart.ShoppingCartPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sinsay.Views.User.WindowsShoppingCart"
        mc:Ignorable="d"
        Title="Sinsay - Моя корзина" Height="720" Width="1024"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded"
        Name="ShoppingCartWND">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition  Height="40"/>
            <RowDefinition  Height="40"/>
            <RowDefinition  Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!--HEADER-->
        <StackPanel Grid.Row="0" VerticalAlignment="Top" HorizontalAlignment="Center" Width="auto" Orientation="Horizontal">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock x:Name="TBlockLogo" Text="Sinsay" HorizontalAlignment="Center" TextAlignment="Center" FontSize="30" Height="35" FontWeight="Bold" FontFamily="Matura MT Script Capitals" Width="200" VerticalAlignment="Center"/>
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Row="0" Margin="20,0,0,0" HorizontalAlignment="Right" VerticalAlignment="Center"  Orientation="Horizontal" >
            <TextBlock FontFamily="Bahnschrift Condensed" FontSize="18" x:Name="TbUserName" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,20,0"><Run Text="Привет, Имя"/></TextBlock>
            <Button x:Name="LogOut" Content="Выйти" Click="LogOut_Click" Height="30" Width="90" FontFamily="Bahnschrift Condensed" FontSize="20"/>
        </StackPanel>
        <!--END HEADER-->

        <!--MAIN MENU-->
        <StackPanel Grid.Row="1" Margin="20,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center"  Orientation="Horizontal">
            <Button  Content="Товары" x:Name="clothes" Click="clothes_Click" Height="30" Width="90" FontFamily="Bahnschrift Condensed" FontSize="20"/>
            <Button  Content="Профиль"  Margin="20,0,0,0"  Height="30" Width="90" FontFamily="Bahnschrift Condensed" FontSize="20"/>
            <Button  Content="Мои заказы" Margin="20,0,0,0"  Height="30" Width="90" FontFamily="Bahnschrift Condensed" FontSize="20"/>
        </StackPanel>
        <!--END MAIN MENU-->

        <!--CREATE ORDER-->
        <StackPanel Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Left" Orientation="Horizontal">
            <TextBlock Text="Итого: "  FontFamily="Bahnschrift Condensed" FontSize="16"></TextBlock>
            <TextBlock x:Name="TotalPrice" Text="{Binding TotalPrice}" FontFamily="Bahnschrift Condensed" FontSize="18"></TextBlock>
            <Button Content="Оформить заказ" Command="{Binding OpenCreateOrder}" FontFamily="Bahnschrift Condensed" FontSize="18" Margin="5,0,0,0"></Button>
        </StackPanel>
        <!--END CREATE ORDER-->

        <!--CLOTHES LIST-->
        <ListView x:Name="ViewShoppingCart" Grid.Row="3" ItemsSource="{Binding ShoppingCarts}" SelectedItem="{Binding SelectedShoppingCart}">
            <ListView.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Удалить из корзины"  Command="{Binding DeleteToShopingCart}" CommandParameter="{Binding ElementName=ShoppingCartWND}"/>
                </ContextMenu>
            </ListView.ContextMenu>
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="450" Header="Наименование товара" DisplayMemberBinding="{Binding Path=Clothes.Name}"/>
                    <GridViewColumn Width="450" Header="Описание" DisplayMemberBinding="{Binding Path=Clothes.Description}"/>
                    <GridViewColumn Width="auto" Header="Цена" DisplayMemberBinding="{Binding Path=Clothes.Price}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <!--END CLOTHES LIST -->

    </Grid>
</Window>
